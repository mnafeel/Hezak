{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": false,
    "noUnusedLocals": false,
    "outDir": "lib",
    "sourceMap": true,
    "strict": false,
    "target": "ES2020",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"]
    },
    "noImplicitAny": false
  },
  "compileOnSave": true,
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "src/backend/src/services/categoryService.ts",
    "src/backend/src/services/productService.ts",
    "src/backend/src/services/orderService.ts",
    "src/backend/src/services/bannerService.ts",
    "src/backend/src/services/userService.ts",
    "src/backend/src/services/userAuthService.ts",
    "src/backend/src/services/settingsService.ts",
    "src/backend/src/services/siteSettingsService.ts",
    "src/backend/src/services/adminService.ts",
    "src/backend/src/utils/prisma.ts",
    "src/backend/src/generated"
  ]
}

